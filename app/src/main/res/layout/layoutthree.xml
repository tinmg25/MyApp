<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:src="@drawable/lake"
        android:id="@+id/imgone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oeschinen lake campground"
        android:layout_below="@id/imgone"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/txtOne"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kandersteg, Switzerland"
        android:layout_below="@id/txtOne"
        android:textSize="15sp"
        android:id="@+id/txtTwo"
        android:textColor="#6E6A6A"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imgone"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/txtOne"
        android:src="@drawable/crimson"
        android:id="@+id/imgtwo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:layout_marginTop="3dp"
        android:textSize="25dp"
        android:id="@+id/txtthree"
        android:layout_toRightOf="@id/imgtwo"
        android:layout_below="@id/imgone"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtTwo"
        android:layout_marginTop="26dp"
        android:src="@drawable/phone"
        android:id="@+id/imgthree"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtTwo"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="105dp"
        android:layout_toRightOf="@id/imgthree"
        android:src="@drawable/route"
        android:id="@+id/imgfour"/>

    <ImageView
        android:id="@+id/imgfive"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtTwo"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@id/imgfour"
        android:src="@drawable/share" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL"
        android:textSize="25dp"
        android:textColor="#2196F3"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/imgthree"
        android:id="@+id/txtfour"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROUTE"
        android:textColor="#2196F3"
        android:textSize="25dp"
        android:layout_marginLeft="160dp"
        android:layout_below="@id/imgfour"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:textColor="#2196F3"
        android:textSize="25dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@id/imgfive"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lake Oeschinen lies at the foot of the BlÃ¼emlisalp in the Bernese Alps. Situated 1,578 meters above sea level, it is one of the larger Alpine Lakes. A gondola ride from Kandersteg, followed by a half-hour walk through pastures and pine forest, leads you to the lake, which warms to 20 degrees Celsius in the summer. Activities enjoyed here include rowing, and riding the summer toboggan run."
        android:layout_below="@id/txtfour"/>
"/>

</RelativeLayout>